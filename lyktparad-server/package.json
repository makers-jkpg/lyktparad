{
  "name": "lyktparad-server",
  "version": "1.0.0",
  "description": "Optional external web server for lyktparad mesh network control interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "lyktparad",
    "mesh",
    "webserver"
  ],
  "author": "the_louie",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bonjour": "^3.5.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "web-ui/js/**/*.js",
      "!web-ui/js/**/*.min.js"
    ]
  }
}
